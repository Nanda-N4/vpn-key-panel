<!doctype html>
<html>
<head>
  <meta charset="utf-8"/>
  <meta name="viewport" content="width=device-width, initial-scale=1"/>
  <title>Admin â€¢ <%= panelConfig.brandName %></title>
  <link rel="stylesheet" href="/public/style.css"/>
</head>
<body>
  <div class="bg"></div>

  <header class="topbar">
    <a class="brand" href="/">
      <span class="brandMark">âš¡</span>
      <span class="brandText"><%= panelConfig.brandName %></span>
    </a>

    <div class="topnav">
      <a class="navlink" href="/">Public</a>
      <form method="POST" action="<%= ADMIN_PATH %>/logout" style="margin:0;">
        <button class="btn btnDanger" type="submit">Logout</button>
      </form>
    </div>
  </header>

  <main class="wrap">
    <section class="card">
      <div class="rowBetween">
        <h2 class="h2">Admin Dashboard</h2>
        <div class="hintSmall">Manage VPN Keys</div>
      </div>

      <div class="divider"></div>

      <div class="adminGrid">
        <div class="panel">
          <h3 class="h3">Add VPN Key</h3>

          <form method="POST" action="<%= ADMIN_PATH %>/add" class="form">
            <div class="formGrid">
              <div class="field">
                <div class="label">Key Type</div>
                <select name="key_type" class="input" required>
                  <option value="OUTLINE">OUTLINE (Shadowsocks)</option>
                  <option value="V2RAY">V2RAY</option>
                </select>
              </div>

              <div class="field">
                <div class="label">GB Limit</div>
                <input type="number" name="gb_limit" class="input" placeholder="2048" required/>
              </div>

              <div class="field">
                <div class="label">Region Name</div>
                <input name="region_name" class="input" placeholder="Singapore" required/>
              </div>

              <div class="field">
                <div class="label">Region Flag</div>
                <input name="region_flag" class="input" placeholder="ðŸ‡¸ðŸ‡¬" required/>
              </div>

              <div class="field">
                <div class="label">Expire Date (YYYY-MM-DD)</div>
                <input name="expire_date" class="input" placeholder="2026-03-25" required/>
              </div>

              <div class="field" style="grid-column:1/-1;">
                <div class="label">Key String</div>
                <textarea name="key_string" class="input" placeholder="ss://... or vless://..." required></textarea>
              </div>
            </div>

            <button class="btn btnPrimary w100" type="submit">Add Key</button>
          </form>
        </div>

        <div class="panel">
          <h3 class="h3">Keys</h3>

          <div class="tableWrap">
            <table class="table">
              <thead>
                <tr>
                  <th>ID</th><th>Type</th><th>Region</th><th>GB</th><th>Expire</th><th>Status</th><th>Link</th><th></th>
                </tr>
              </thead>
              <tbody>
                <% rows.forEach(r => { %>
                  <tr>
                    <td><%= r.id %></td>
                    <td><%= r.key_type %></td>
                    <td><%= r.region_flag %> <%= r.region_name %></td>
                    <td><%= r.gb_limit %></td>
                    <td><%= r.expire_date %></td>
                    <td><span class="badge <%= r.status === 'ACTIVE' ? 'ok' : 'bad' %>"><%= r.status %></span></td>
                    <td><a href="/k/<%= r.id %>" target="_blank">/k/<%= r.id %></a></td>
                    <td>
                      <form method="POST" action="<%= ADMIN_PATH %>/delete/<%= r.id %>" onsubmit="return confirm('Delete this key?')">
                        <button class="btn btnDanger" type="submit">Delete</button>
                      </form>
                    </td>
                  </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
        </div>

      </div>
    </section>
  </main>
</body>
</html>
