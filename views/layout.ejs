<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= panelConfig?.brandName || "VPN Key Portal" %></title>

    <!-- CSS Architecture -->
    <link rel="stylesheet" href="/public/00-tokens.css">
<link rel="stylesheet" href="/public/01-base.css">
<link rel="stylesheet" href="/public/02-layout.css">
<link rel="stylesheet" href="/public/03-components.css">
<link rel="stylesheet" href="/public/04-pages.css">
<link rel="stylesheet" href="/public/05-utilities.css">
</head>
<body>
  <div class="bg-aurora"></div>

  <div class="app-shell">
    <header class="app-header">
      <div class="container">
        <div class="header-bar glass glass--strong">
          <div class="brand">
            <div class="logo">⚡</div>
            <div style="min-width:0">
              <div class="title"><%= panelConfig?.brandName || "FREE KEY By N4" %></div>
              <div class="sub"><%= panelConfig?.tagline || "Fast • Simple • Secure" %></div>
            </div>
          </div>

          <a class="btn" href="<%= panelConfig?.telegramChannelUrl || "#" %>" target="_blank" rel="noopener">
            <span class="icon">✈️</span>
            Channel
          </a>
        </div>
      </div>
    </header>

    <main class="container">
      <%- body %>
      <div class="footer">© <%= new Date().getFullYear() %> <%= panelConfig?.brandName || "FREE KEY By N4" %></div>
    </main>
  </div>
</body>
<body>

    <div class="app-shell">
        <header class="app-header">
            <div class="brand">
                <span class="brand-icon">⚡</span>
                <div class="brand-text">
                    <h1><%= panelConfig?.brandName %></h1>
                    <span class="brand-sub">Fast • Simple • Secure</span>
                </div>
            </div>

            <a href="<%= panelConfig?.telegramChannelUrl %>" 
               target="_blank" 
               class="btn btn-glass">
               ✈ Channel
            </a>
        </header>

        <main class="app-content">
            <%- body %>
        </main>

        <footer class="app-footer">
            © <%= new Date().getFullYear() %> <%= panelConfig?.brandName %>
        </footer>
    </div>

</body>
</html>
