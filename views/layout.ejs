<!doctype html>
<html lang="en" data-theme="glass-bright">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <meta name="color-scheme" content="light dark" />

  <title><%= (panelConfig && panelConfig.brandName) ? panelConfig.brandName : "VPN Key Portal" %></title>

  <!-- CSS Architecture (must be /public/...) -->
  <link rel="stylesheet" href="/public/00-tokens.css" />
  <link rel="stylesheet" href="/public/01-base.css" />
  <link rel="stylesheet" href="/public/02-layout.css" />
  <link rel="stylesheet" href="/public/03-components.css" />
  <link rel="stylesheet" href="/public/04-pages.css" />
  <link rel="stylesheet" href="/public/05-utilities.css" />
</head>

<body>
  <!-- Background -->
  <div class="bg-aurora" aria-hidden="true"></div>

  <div class="app-shell">
    <!-- Header -->
    <header class="app-header" role="banner">
      <div class="container header-inner glass glass--strong">
        <div class="brand">
          <div class="brand-icon" aria-hidden="true">⚡</div>

          <div class="brand-text">
            <div class="brand-title">
              <%= (panelConfig && panelConfig.brandName) ? panelConfig.brandName : "FREE KEY By N4" %>
            </div>
            <div class="brand-sub">
              <%= (panelConfig && panelConfig.brandTagline) ? panelConfig.brandTagline : "Fast • Simple • Secure" %>
            </div>
          </div>
        </div>

        <div class="header-actions">
          <% if (panelConfig && panelConfig.channelUrl) { %>
            <a class="btn btn--pill btn--glass" href="<%= panelConfig.channelUrl %>" target="_blank" rel="noopener">
              ✈️ <span>Channel</span>
            </a>
          <% } %>
        </div>
      </div>
    </header>

    <!-- Main -->
    <main class="app-main" role="main">
      <div class="container">
        <%- body %>
      </div>
    </main>

    <!-- Footer -->
    <footer class="app-footer">
      <div class="container footer-inner">
        <div class="footer-text">
          © <%= new Date().getFullYear() %> <%= (panelConfig && panelConfig.brandName) ? panelConfig.brandName : "FREE KEY By N4" %>
        </div>

        <% if (panelConfig && panelConfig.footerLinkText && panelConfig.footerLinkUrl) { %>
          <a class="footer-link" href="<%= panelConfig.footerLinkUrl %>" target="_blank" rel="noopener">
            <%= panelConfig.footerLinkText %>
          </a>
        <% } %>
      </div>
    </footer>
  </div>

  <!-- Small UX helpers (safe) -->
  <script>
    // Prevent "tap highlight" weirdness on some Android browsers
    document.documentElement.style.webkitTapHighlightColor = "transparent";
  </script>
</body>
</html>
