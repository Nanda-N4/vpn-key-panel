<!doctype html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <meta name="color-scheme" content="light dark" />

  <title><%= (panelConfig && panelConfig.brandName) ? panelConfig.brandName : "VPN KEY" %></title>

  <!-- CSS Architecture (IMPORTANT: must be /public/..) -->
  <link rel="stylesheet" href="/public/00-tokens.css" />
  <link rel="stylesheet" href="/public/01-base.css" />
  <link rel="stylesheet" href="/public/02-layout.css" />
  <link rel="stylesheet" href="/public/03-components.css" />
  <link rel="stylesheet" href="/public/04-pages.css" />
  <link rel="stylesheet" href="/public/05-utilities.css" />
</head>

<body>
  <div class="bg-aurora" aria-hidden="true"></div>

  <div class="app-shell">
    <!-- Header -->
    <header class="app-header">
      <div class="container header-inner">
        <div class="brand">
          <span class="brand-icon" aria-hidden="true">‚ö°</span>
          <div class="brand-text">
            <div class="brand-title"><%= panelConfig?.brandName || "VPN KEY" %></div>
            <div class="brand-sub">Fast ‚Ä¢ Simple ‚Ä¢ Secure</div>
          </div>
        </div>

        <div class="header-actions">
          <% if (panelConfig && panelConfig.telegramChannelUrl && panelConfig.telegramChannelUrl !== "#") { %>
            <a class="btn btn-pill" href="<%= panelConfig.telegramChannelUrl %>" target="_blank" rel="noopener">
              ‚úàÔ∏è <span><%= panelConfig.telegramChannelText || "Channel" %></span>
            </a>
          <% } %>
        </div>
      </div>
    </header>

    <!-- Main -->
    <main class="container page">
      <%- body %>
    </main>

    <!-- Footer -->
    <footer class="container footer">
      <div class="footer-inner">
        <span>¬© <%= new Date().getFullYear() %> <%= panelConfig?.brandName || "VPN KEY" %></span>
        <% if (panelConfig && panelConfig.telegramAdminUrl && panelConfig.telegramAdminUrl !== "#") { %>
          <a class="link" href="<%= panelConfig.telegramAdminUrl %>" target="_blank" rel="noopener">
            Support: <%= panelConfig.telegramAdminText || "Contact Admin" %>
          </a>
        <% } %>
      </div>
    </footer>
  </div>

  <!-- Announcement Modal (optional, safe HTML expected) -->
  <% if (panelConfig && panelConfig.announceHtml) { %>
    <div class="modal-backdrop" id="announceBackdrop" role="dialog" aria-modal="true" aria-label="Announcement">
      <div class="modal">
        <div class="modal-head">
          <div class="modal-title">üì£ Announcement</div>
          <button class="btn btn-ghost" id="announceClose" type="button">Close</button>
        </div>
        <div class="modal-body">
          <%- panelConfig.announceHtml %>
        </div>
      </div>
    </div>

    <script>
      (function () {
        var version = "<%= panelConfig.announceVersion || "" %>";
        var key = "announce_seen_" + version;
        var backdrop = document.getElementById("announceBackdrop");
        var closeBtn = document.getElementById("announceClose");

        function hide() {
          if (backdrop) backdrop.style.display = "none";
          try { localStorage.setItem(key, "1"); } catch(e) {}
        }

        function showIfNeeded() {
          var seen = "0";
          try { seen = localStorage.getItem(key) || "0"; } catch(e) {}
          if (seen === "1") {
            if (backdrop) backdrop.style.display = "none";
          } else {
            if (backdrop) backdrop.style.display = "flex";
          }
        }

        if (closeBtn) closeBtn.addEventListener("click", hide);
        if (backdrop) backdrop.addEventListener("click", function (e) {
          if (e.target === backdrop) hide();
        });

        showIfNeeded();
      })();
    </script>
  <% } %>

  <!-- Clipboard helper -->
  <script>
    window.copyText = async function (txt) {
      try {
        await navigator.clipboard.writeText(txt);
        return true;
      } catch (e) {
        try {
          var ta = document.createElement("textarea");
          ta.value = txt;
          ta.style.position = "fixed";
          ta.style.left = "-9999px";
          document.body.appendChild(ta);
          ta.select();
          document.execCommand("copy");
          document.body.removeChild(ta);
          return true;
        } catch (e2) {
          return false;
        }
      }
    };
  </script>
</body>
</html>
