<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover" />
  <meta name="color-scheme" content="light dark" />
  <title><%= (panelConfig && panelConfig.brandName) ? panelConfig.brandName : "VPN KEY" %></title>

  <link rel="stylesheet" href="/public/00-tokens.css" />
  <link rel="stylesheet" href="/public/01-base.css" />
  <link rel="stylesheet" href="/public/02-layout.css" />
  <link rel="stylesheet" href="/public/03-components.css" />
  <link rel="stylesheet" href="/public/04-pages.css" />
  <link rel="stylesheet" href="/public/05-utilities.css" />
</head>

<body>
  <div class="bg-aurora" aria-hidden="true"></div>

  <div class="app-shell">
    <header class="app-header glass">
      <div class="container header-inner">
        <div class="brand">
          <div class="brand-icon" aria-hidden="true">‚ö°</div>
          <div class="brand-text">
            <div class="brand-title"><%= panelConfig.brandName || "VPN KEY" %></div>
            <div class="brand-sub">Fast ‚Ä¢ Simple ‚Ä¢ Secure</div>
          </div>
        </div>

        <div class="header-actions">
          <% if (panelConfig && panelConfig.telegramChannelUrl) { %>
            <a class="pill glass-btn" href="<%= panelConfig.telegramChannelUrl %>" target="_blank" rel="noopener">
              ‚úàÔ∏è <span><%= panelConfig.telegramChannelText || "Join Channel" %></span>
            </a>
          <% } %>
        </div>
      </div>
    </header>

    <main class="container main">
      <div class="top-row">
        <a class="pill glass-btn" href="/">‚Üê Back</a>
      </div>

      <% if (error) { %>
        <section class="card glass">
          <h2 style="margin:0 0 8px 0;">Error</h2>
          <p style="margin:0;"><%= error %></p>
        </section>
      <% } %>

      <% if (item) { %>
        <section class="card glass detail-card">
          <div class="detail-head">
            <div class="detail-type">
              <div class="status-pill <%= (item.statusComputed || '').toLowerCase() %>">
                <%= (item.statusComputed || '').toUpperCase() %>
              </div>
              <h2 style="margin:0;"><%= (item.type || '').toUpperCase() %></h2>
            </div>

            <div class="detail-region">
              <span class="flag"><%= item.region_flag || "üåç" %></span>
              <span><%= item.region_name || "Unknown" %></span>
            </div>

            <div class="key-meta">
              <span class="dot">GB <%= item.gb_limit || 0 %></span>
              <span class="dot">Expire <%= item.expire_date || "-" %></span>
            </div>
          </div>

          <div class="key-box">
            <div class="key-label">Key</div>
            <div class="key-row">
              <input id="keyInput" class="input key-input" readonly value="<%= item.key_string || '' %>" />
              <button class="btn glass-btn" type="button" onclick="copyKey()">üìã Copy</button>
            </div>
            <div class="muted">
              Copy ·Äï·Äº·ÄÆ·Ä∏·Äõ·ÄÑ·Ä∫ ·Äû·ÄØ·Ä∂·Ä∏·Äô·Äö·Ä∑·Ä∫ App ·Äë·Ä≤ Paste ‚Üí Connect ·Äú·ÄØ·Äï·Ä∫·Äï·Ä´
            </div>
          </div>

          <div class="apps">
            <div class="apps-title">Download Apps</div>
            <div class="apps-grid">
              <% (apps || []).forEach(a => { %>
                <a class="app-item glass" href="<%= a.url %>" target="_blank" rel="noopener">
                  <div class="app-name"><%= a.name %></div>
                  <div class="app-sub"><%= a.sub %></div>
                  <div class="app-arrow">‚Üó</div>
                </a>
              <% }) %>
            </div>
          </div>

          <div class="detail-actions">
            <% if (panelConfig && panelConfig.telegramAdminUrl) { %>
              <a class="btn glass-btn" href="<%= panelConfig.telegramAdminUrl %>" target="_blank" rel="noopener">üí¨ Contact Admin</a>
            <% } %>
            <% if (panelConfig && panelConfig.telegramChannelUrl) { %>
              <a class="btn glass-btn" href="<%= panelConfig.telegramChannelUrl %>" target="_blank" rel="noopener">üì£ Join Channel</a>
            <% } %>
          </div>
        </section>

        <footer class="footer">
          <div>¬© <%= new Date().getFullYear() %> <%= (panelConfig.brandName || "FREE KEY") %></div>
        </footer>
      <% } %>
    </main>
  </div>

  <script>
    function copyKey() {
      const el = document.getElementById("keyInput");
      if (!el) return;
      el.select();
      el.setSelectionRange(0, 999999);
      try { document.execCommand("copy"); } catch (e) {}
    }
  </script>
</body>
</html>
