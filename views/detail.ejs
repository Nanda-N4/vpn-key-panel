<%- include("layout", { 
  title: "Detail",
  panelConfig,
  body: `
<div class="card">

<h2>${row.key_type} • ${row.region_flag} ${row.region_name}</h2>

<div class="info">
GB: ${row.gb_limit} • Exp: ${row.expire_date}
<span class="badge ${status==="ACTIVE"?"active":"expired"}">${status}</span>
</div>

<div class="copy-box">
  <input id="vpnKey" readonly value="${row.key_string}">
  <button onclick="copyKey()">Copy</button>
</div>

<h3>Download Apps</h3>
<ul>
<li><a href="${apps.windows}" target="_blank">Windows</a></li>
<li><a href="${apps.mac}" target="_blank">Mac</a></li>
<li><a href="${apps.android}" target="_blank">Android</a></li>
<li><a href="${apps.ios}" target="_blank">iPhone</a></li>
</ul>

<hr>

<div class="buy-section">
  <h3>Buy This VPN</h3>
  <a class="btn neon" href="${panelConfig.telegramAdminUrl}" target="_blank">
    Telegram Admin
  </a>
</div>

</div>

<script>
function copyKey(){
  const el=document.getElementById("vpnKey");
  navigator.clipboard.writeText(el.value);
  showToast("Copied!");
}
</script>
`
}) %>
